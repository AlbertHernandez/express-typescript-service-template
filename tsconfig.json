{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2022",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@contexts/*": ["src/contexts/*"],
      "@shared/*": ["src/shared/*"]
    },
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist"]
}
